<div class="container form-container">
  <div class="col-xs-4 col-xs-offset-4 form-box">
    <%= render "shares/error_messages", resource: @approval %>
    <h4 class="form-title">権限編集</h4>
    <h4>編集するユーザー：<%= @user.name %></h4>
    <%= form_with(url: approvered_update_path(@user), method: :patch, local: true) do |f| %>
      <div class="form-group">
        <%= f.select :permission_status, Approval.permission_statuses.keys, {prompt: "権限選択"}, class:"form-control fa"%>
      </div>
      <div class="form-group">
        <%= f.submit "更新", class:"btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>