<div class="form-container">
  <div class="form-box-s">
    <% if flash[:danger] %>
      <div class="error-flash">
        <%= flash[:danger] %>
      </div>
    <% end %>
    <h4 class="form-title">ユーザー検索</h4>
      <%= form_with(url: approvals_permission_path, method: :get, local: true) do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class:"form-control fa", placeholder: "\uf007 ユーザー名" %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, class:"form-control fa", placeholder: "\uf0e0 メールアドレス" %>
        </div>
        <div class="form-group">
          <%= f.submit "検索", class:"btn btn-default" %>
        </div>
      <% end %>
    <h4 class="form-title">ユーザー一覧</h4>
    <div class="form-group">
      <%= form_with(url: approvals_index_path, method: :get, local: true) do |f| %>
        <%= f.hidden_field :selected, value: "approver" %>
        <%= f.submit "\uf007 承認したユーザー一覧", class:"fa btn btn-default form-control" %>
      <% end %><br>
      <%= form_with(url: approvals_index_path, method: :get, local: true) do |f| %>
        <%= f.hidden_field :selected, value: "approvered" %>
        <%= f.submit "\uf007 承認されたユーザー一覧", class:"fa btn btn-default form-control" %>
      <% end %>
    </div>
  </div>
</div>