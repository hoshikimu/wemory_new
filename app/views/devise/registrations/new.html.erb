<div class="container form-container">
  <div class="col-xs-4 col-xs-offset-4 form-box">
    <h4 class="form-title">会員登録</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control fa", placeholder: "\uf007 お名前" %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control fa", placeholder: "\uf0e0 メールアドレス" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control fa", placeholder: "\uf023 パスワード" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control fa", placeholder: "\uf023 パスワード確認" %>
        </div>
        <div class="form-group">
          <%= f.submit "登録", class:"btn btn-default" %>
        </div>
      <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
