<div class="container form-container">
  <div class="col-xs-4 col-xs-offset-4 form-box">
    <h4 class="form-title">ログイン</h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control fa", placeholder: "\uf0e0 メールアドレス" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control fa", placeholder: "\uf023 パスワード" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.submit "ログイン", class:"btn btn-default" %>
        </div>
      <% end %>
    <%#= render "devise/shared/links" %>
  </div>
</div>
