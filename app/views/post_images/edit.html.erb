<div class="container form-container">
  <div class="col-xs-6 col-xs-offset-3 form-box">
    <h4 class="form-title">投稿編集</h4>
      <div class="edit-post-image">
        <%= attachment_image_tag @post_image, :image  %>
      </div>
      <%= form_for(@post_image, url: post_image_path, method: :patch) do |f| %>
        <div class="form-group">
          <%= f.select :category_id, @categories.map{ |category| [category.name, category.id]}, {prompt: "カテゴリー選択"}, class:"form-control fa" %>
        </div>
        <div class="form-group">
          <%= f.text_area :introduction, size: "10x5", class:"form-control fa", placeholder: "\uf27a 紹介文" %>
        </div>
        <div class="form-group">
          <%= f.submit "投稿", class:"btn btn-default" %>
        </div>
      <% end %>
  </div>
</div>